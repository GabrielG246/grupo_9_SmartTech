<!DOCTYPE html>
<html lang="es">
<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/316d2b61a6.js" crossorigin="anonymous"></script>
   
    <title><%= product.name %></title>
    
   

    <link rel="stylesheet" href="/css/normalyze.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/product-detail_style.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100&display=swap" rel="stylesheet">

</head>
<body class="product-detail_body">

    <%- include('./partials/header') %>
    
    <!--++++++++++++++++++++++++++++++++++++++-->
       <main class="product-detail_main_container">

            <div class="product-detail_main">

                
                <div class="product-detail_images">
                <label class="product-detail_mini_images">
                    <i class="fas fa-mobile-alt"></i>
                    <i class="fas fa-mobile-alt"></i>
                    <i class="fas fa-mobile-alt"></i>
                    <i class="fas fa-mobile-alt"></i>
                    <i class="fas fa-mobile-alt"></i>
                </label>
                

                <div class='product-detail_image'>
                    <img src="/img/productImages/<%=product.image %>" alt="Imagen del producto">
                </div>
                </div>

                <!---------+++++++++++++++++++++++++++++++++++++++++++++---->

                    <div class="product-details_gral_info">
    
                        <h2 class="product-name"> <%= product.name %> </h2>
    
                        <div class="product-stars">
                            <button value="oneStar"><i class="far fa-star"></i></button>
                            <button value="twoStar"><i class="far fa-star"></i></button>
                            <button value="threeStar"><i class="far fa-star"></i></button>
                            <button value="fourStar"><i class="far fa-star"></i></button>
                            <button value="fiveStar"><i class="far fa-star"></i></button>

                        </div>
    
                        <h3 class="product-price"> $ <%= product.price %> </h3>
    
                        <div class="product-specs">
                            <header>Preferencias</header>
                            <span>Color <i class="far fa-square"></i></span>
                        </div>
                
                        <div class="product-buy_button">
                        <a href="#"> <button>Comprar ahora <i class="fas fa-shopping-basket"></i></button> </a>
                        </div>

                        <div class="product-add_cart">
                        <button type="submit">Agregar al carrito <i class="fas fa-shopping-cart"></i></button>
                        </div>  
                
                </div>

                <!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

                <div class="product-info">
                    <h4>Información del producto</h4>
                    <br>
                    <br>
                    <%= product.description %> 
                </div>

                <!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

                <div class="seller-info">
                    <h4>Información del vendedor</h4>
                    <br>
                    <%= product.info %> 
                </div>

               
               

