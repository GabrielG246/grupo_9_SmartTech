<!DOCTYPE html>
<html lang="es">
<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/316d2b61a6.js" crossorigin="anonymous"></script>
   
    <title><%= searchProduct.name %></title>
    
   

    <link rel="stylesheet" href="/css/normalyze.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/productos-style.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100&display=swap" rel="stylesheet">

</head>
<body>

    <%- include('./partials/header') %>
    
    <!--++++++++++++++++++++++++++++++++++++++-->
       <main>

            <div class="main_container">

                

                <label class="product_photos">
                    <i class="fas fa-mobile-alt"></i>
                    <i class="fas fa-mobile-alt"></i>
                    <i class="fas fa-mobile-alt"></i>
                    <i class="fas fa-mobile-alt"></i>
                    <i class="fas fa-mobile-alt"></i>
                </label>
                

                <div class="product">


                    <img src="<%= searchProduct.image %>" alt="Imagen del producto">
                </div>

                <!---------+++++++++++++++++++++++++++++++++++++++++++++---->

                    <div class="product_details">
    
                        <h2 class="product_name"> <%= searchProduct.name %> </h2>
    
                        <div class="product_stars">
                            <i class="far fa-star"></i>
                            <i class="far fa-star"></i>
                            <i class="far fa-star"></i>
                            <i class="far fa-star"></i>
                            <i class="far fa-star"></i>
                        </div>
    
                        <h3 class="product_price"> $ <%= searchProduct.price %> </h3>
    
                        <div class="product_specs">
                            <header>Preferencias</header>
                            <span>Color <i class="far fa-square"></i></span>
                        </div>
                
                
                  

                    <form action="/" method="GET" class="product_buttons">
                        <button>Comprar ahora <i class="fas fa-shopping-basket"></i></button>
                        <button>Agregar al carrito <i class="fas fa-shopping-cart"></i></button>
                    </form>

                </div>

                <!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

                <div class="product_info">
                    <h4>Información del producto</h4>
                    <br>
                    <br>
                    <%= searchProduct.description %> 
                </div>

                <!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

                <div class="seller_info">
                    <h4>Información del vendedor</h4>
                    <br>
                    <%= searchProduct.info %> 
                </div>

               
               

                <!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
                <div class="product_simil">
                <label class="product_simil-text">Productos Similares</label>
                <div class="product_simil-objects">
                    <a href="./1"> <img src="/img/producto_1.png"> <footer class="foot_price"> $180.000 </footer> </a>
                    <a href="./2"> <img src="/img/producto_2.png"> <footer class="foot_price"> $100.000 </footer> </a>
                    <a href="./3"> <img src="/img/producto_4.png"> <footer class="foot_price"> $80.000 </footer> </a>
                    <a href="./4"> <img src="/img/producto_5.png"> <footer class="foot_price"> $150.000 </footer> </a>
                    <a href="./5"> <img src="/img/producto_6.png"> <footer class="foot_price"> $85.000 </footer> </a>
                </div>
                </div>

            </div>

        </main>
        <!--++++++++++++++++++++++++++++++++++++++-->
        <%- include('./partials/footer') %>
</body>
</html>







